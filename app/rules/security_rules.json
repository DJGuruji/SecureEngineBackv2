{
  "rules": [
    {
      "id": "CWE-89",
      "description": "SQL Injection",
      "severity": "high",
      "category": "Security",
      "cwe": "CWE-89",
      "owasp": "A03:2021-Injection",
      "patterns": [
        "executeQuery\\(['\"].*?\\+.*?['\"]",
        "SELECT.*?\\+.*?FROM"
      ]
    },
    {
      "id": "CWE-79",
      "description": "Cross-site Scripting (XSS)",
      "severity": "high",
      "category": "Security",
      "cwe": "CWE-79",
      "owasp": "A03:2021-Injection",
      "patterns": [
        "\\.innerHTML\\s*=",
        "document\\.write\\("
      ]
    },
    {
      "id": "CWE-78",
      "description": "OS Command Injection",
      "severity": "high",
      "category": "Security",
      "cwe": "CWE-78",
      "owasp": "A03:2021-Injection",
      "patterns": [
        "exec\\(",
        "eval\\(",
        "Runtime\\.getRuntime\\(\\)\\.exec\\("
      ]
    },
    {
      "id": "CWE-200",
      "description": "Information Exposure",
      "severity": "medium",
      "category": "Security",
      "cwe": "CWE-200",
      "owasp": "A04:2021-Insecure Design",
      "patterns": [
        "\\.printStackTrace\\(\\)",
        "console\\.log\\(error\\)",
        "print\\(e\\)"
      ]
    },
    {
      "id": "CWE-259",
      "description": "Hard-coded Password",
      "severity": "high",
      "category": "Security",
      "cwe": "CWE-259",
      "owasp": "A07:2021-Identification and Authentication Failures",
      "patterns": [
        "password\\s*=\\s*['\"][^'\"]+['\"]",
        "apikey\\s*=\\s*['\"][^'\"]+['\"]"
      ]
    },
    {
      "id": "ARCH-001",
      "description": "God Class (over 500 LOC)",
      "severity": "medium",
      "category": "Architecture",
      "patterns": []
    },
    {
      "id": "ARCH-002",
      "description": "Long Method (over 50 LOC)",
      "severity": "medium",
      "category": "Architecture",
      "patterns": []
    },
    {
      "id": "PERF-001",
      "description": "Inefficient Loop",
      "severity": "medium",
      "category": "Performance",
      "patterns": [
        "for.*?for.*?for",
        "while.*?while"
      ]
    },
    {
      "id": "SEC-001",
      "description": "Insecure Random",
      "severity": "medium",
      "category": "Security",
      "patterns": [
        "Math\\.random\\(\\)",
        "java\\.util\\.Random"
      ]
    },
    {
      "id": "SEC-002",
      "description": "Insecure Hash",
      "severity": "high",
      "category": "Security",
      "patterns": [
        "MD5",
        "SHA1"
      ]
    }
  ]
} 